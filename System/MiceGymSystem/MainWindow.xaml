<Window x:Class="MiceGymSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiceGymSystem"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="/Resources/Background.png"/>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1" Margin="40">
            <StackPanel>
                <TextBox x:Name="tbEmail" Background="Transparent" BorderBrush="White" Margin="0 0 0 20" BorderThickness="2,2,2,2" />
                <TextBox x:Name="tbSenha" Background="Transparent" BorderBrush="White" Margin="0" BorderThickness="2,2,2,2" ClipToBounds="True" />
            </StackPanel>
        </Grid>

    </Grid>
</Window>
